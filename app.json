{
  "name": "book-a-meal-server",
  "env": {
    "BASE_URL": {
      "required": true
    },
    "CLOSING_HOUR": {
      "required": true
    },
    "CLOSING_MINUTE": {
      "required": true
    },
    "EMAIL_HOST": {
      "required": true
    },
    "EMAIL_PORT": {
      "required": true
    },
    "EMAIL_USER": {
      "required": true
    },
    "EMAIL_PASSWORD": {
      "required": true
    },
    "PERSONAL_EMAIL": {
      "required": true
    },
    "EXPIRY": {
      "required": true
    },
    "OPENING_HOUR": {
      "required": true
    },
    "OPENING_MINUTE": {
      "required": true
    },
    "SECRET": {
      "required": true
    },
    "TZ": {
      "required": true
    },
    "NODE_ENV": {
      "value": "staging"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": ["heroku-postgresql"],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}
